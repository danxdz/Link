{
  "name": "telegram-cursor-relay",
  "version": "1.0.0",
  "description": "Telegram-Cursor API Relay with Modern Web Interface",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "cd backend && npm install --production",
    "preview": "vite preview",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install",
    "postinstall": "npm run build:frontend"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": ["telegram", "cursor", "ai", "relay", "web", "react", "nodejs"],
  "author": "",
  "license": "MIT"
}