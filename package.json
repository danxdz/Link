{
  "name": "telegram-cursor-relay",
  "version": "1.0.0",
  "description": "Telegram-Cursor API Relay with Modern Web Interface",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "prebuild": "npm install --legacy-peer-deps",
    "build": "npm run build:frontend",
    "build:frontend": "vite build",
    "build:backend": "cd backend && npm install --production",
    "preview": "vite preview",
    "start": "node server.js",
    "install:all": "npm install && cd backend && npm install",
    "postinstall": "npm run build:frontend",
    "render-postbuild": "npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "node-telegram-bot-api": "^0.66.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "lucide-react": "^0.294.0",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": ["telegram", "cursor", "ai", "relay", "web", "react", "nodejs"],
  "author": "",
  "license": "MIT"
}